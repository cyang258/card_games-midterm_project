<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>

    <%- include partials/_head.ejs %>

    <!-- Layouts CSS -->
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

    <!-- Users_games script -->
    <script type="text/javascript" src="/scripts/users_games.js"></script>

    <!-- Socket IO -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.4/socket.io.js"></script>
  </head>

  <body>

    <%- include partials/_header.ejs %>

    <main>
      <nav class="play-games">
        <button class="show-games">Choose Game</button>
        <button class="join-lobby goofspiel" data-game-name-id="1">Play Goofspiel</button>
        <button class="join-lobby hearts" data-game-name-id="2">Play Hearts</button>
      </nav>

      <nav class="games">

      </nav>

      <article class="game-table">
        <figure>
          <header class="opponent">
            <h3></h3><span class="opponent-score"></span>
          </header>

          <section class="deck">
            <h3>Deck</h3>
            <object class="deck-display">
              <img src="/images/cards/cardback.png">
            </object>
            <div class="play-area">
            </div>
          </section>

          <footer>
            <h3>Your Hand <span class="user-score"></span></h3>
            <object class="user-hand">
            </object>
          </footer>
        </figure>
      </article>
    </main>

    <script>

    </script>
  </body>
</html>
